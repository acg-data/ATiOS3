modules = ["nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Ace Ticket Web"

[[workflows.workflow]]
name = "Ace Ticket Web"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "EXPO_DEVTOOLS_LISTEN_ADDRESS=0.0.0.0 npx expo start -c --web --port 5000 --host lan"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "static"
build = ["bash", "-c", "npx expo export --platform web --output-dir dist"]
publicDir = "dist"
